<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seele.activitystartpattern">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.seele.activitystartpattern.SingleTopActivity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.example.seele.activitystartpattern.SingleTop2Activity"
            android:launchMode="singleTop" />

        <activity
            android:name="com.example.seele.activitystartpattern.SingleTaskActivity"
            android:launchMode="singleTask"
            android:taskAffinity="com.example.test" />

        <activity
            android:name="com.example.seele.activitystartpattern.SingleTask2Activity"
            android:launchMode="singleTask"
            android:taskAffinity="com.example.test" />

        <activity
            android:name="com.example.seele.activitystartpattern.SingleTask3Activity"
            android:launchMode="singleTask"
            android:taskAffinity="com.example.test" />

        <activity
            android:name="com.example.seele.activitystartpattern.SingleInstanceActivity"
            android:launchMode="singleInstance" />

        <activity android:name="com.example.seele.activitystartpattern.SingleInstance2Activity"
            android:launchMode="singleInstance"/>
    </application>

</manifest>